<div class="container">
    <div class="row mt-3 pt-3">
        <div class="col-md-10 m-auto text-center main">
            <i class="fas fa-key fa-5x"></i>
            <h1>Reset Password</h1>
            <%- include ("./partials/messages") %>
            <!-- TODO: Add < %= id % > in action -->
            <form action="/auth/reset/<%= id %>" class="mt-4" method="POST">
                <div class="form-group">
                    <input type="password" id="myResPassword" name="password" class="form-control" placeholder="Enter Password" value="<%= typeof password != 'undefined' ? password : '' %>" />
                    <span class="res-eye-1 position-absolute" onclick="myResPassFunction()">
                        <i id="res1hide1" class="fas fa-eye fa-lg"></i>
                        <i id="res1hide2" class="fas fa-eye-slash fa-lg"></i>
                    </span>
                </div>
                <div class="form-group">
                    <input type="password" id="myResCPassword" name="confirmpassword" class="form-control" placeholder="Confirm Password" value="<%= typeof confirmpassword != 'undefined' ? confirmpassword : '' %>" />
                    <span class="res-eye-2 position-absolute" onclick="myResCPassFunction()">
                        <i id="res2hide1" class="fas fa-eye fa-lg"></i>
                        <i id="res2hide2" class="fas fa-eye-slash fa-lg"></i>
                    </span>
                </div>
                <button type="submit" class="mt-2">Reset Password</button>
            </form>
            <p class="mt-4">
                Remember your password? <a href="/auth/login">Login</a>
            </p>
        </div>
    </div>
</div>